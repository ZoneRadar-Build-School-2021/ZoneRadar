
@{
    ViewBag.Title = "managementSpace";
}

<h2>managementSpace</h2>

<div class="mymain">
    <div class="container">
        <div class="row row-cols-2  d-lg-flex mb-1 ">
            <div class="col col-lg-6 ">
                <h2 class="fs-4">場地管理</h2>
            </div>
            <div class="col col-lg-6  justify-content-lg-end text-end ">
                <a href="AddSpace" class="AddSpaceBtn">
                    增加空間
                </a>
            </div>
        </div>
        <div class="container">
            <div class="row SpaceCardGroup pt-3">
                <div class="col-12 col-xl-6 SpaceCardBody mt-3">
                    <!-- 場地圖片 -->
                    <div class="row SpaceImg">
                        <div class="SpaceCardimg w-100">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRrxaDGTL9uO8NrEQSmy5vcO1b9wzR9vfmnfQ3cG8Bqk2G_Ze4Myu74UO-02RCXFiA3DbY&usqp=CAU">
                        </div>
                    </div>
                    <!-- 場地名稱 -->
                    <div class="row SpaceCardBody">
                        <h5 class="logoS ">
                            Good Space Meeting
                            <i class=" ms-3 far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                        </h5>
                        <p>
                            台北市大安區忠孝東路四段320號樓
                        </p>
                        <p>
                            <img class="me-0" src="~/Assets/IMG/icons/rules.svg" alt="">
                            取消政策: <span class="logoS me-1">非常靈活</span> <span class="me-1">靈活</span><span class="me-1">標準30天</span><span>標準90天</span>
                        </p>
                        <p>
                            便捷設施:<img class="ms-3" src="~/Assets/IMG/icons/wifi.svg" alt="">
                            <img class="ms-3" src="~/Assets/IMG/icons/parking.svg" alt="">
                            <img class="ms-3" src="~/Assets/IMG/icons/projector.svg" alt="">
                        </p>
                    </div>
                    <div class="col-12 text-end border-bottom border-3 pb-5 ">
                        <button class="DeleteSpaceBtn btn" type="button" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            刪除
                        </button>
                        <a class="addspace EditSpaceBtn me-1" href="AddSpace">
                            編輯空間
                        </a>
                    </div>
                </div>
                <div class="col-12 col-xl-6 SpaceCardBody mt-3">
                    <!-- 場地圖片 -->
                    <div class="row SpaceImg">
                        <div class="SpaceCardimg w-100">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRrxaDGTL9uO8NrEQSmy5vcO1b9wzR9vfmnfQ3cG8Bqk2G_Ze4Myu74UO-02RCXFiA3DbY&usqp=CAU">
                        </div>
                    </div>
                    <!-- 場地名稱 -->
                    <div class="row SpaceCardBody">
                        <h5 class="logoS ">
                            Good Space Meeting
                            <i class=" ms-3 far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                            <i class="far fa-star logoS"></i>
                        </h5>
                        <p>
                            台北市大安區忠孝東路四段320號樓
                        </p>
                        <p>
                            <img class="me-0" src="~/Assets/IMG/icons/rules.svg" alt="">
                            取消政策: <span class="logoS me-1">非常靈活</span> <span class="me-1">靈活</span><span class="me-1">標準30天</span><span>標準90天</span>
                        </p>
                        <p>
                            便捷設施:<img class="ms-3" src="~/Assets/IMG/icons/wifi.svg" alt="">
                            <img class="ms-3" src="~/Assets/IMG/icons/parking.svg" alt="">
                            <img class="ms-3" src="~/Assets/IMG/icons/projector.svg" alt="">
                        </p>
                    </div>
                    <div class="col-12 text-end border-bottom border-3 pb-5 ">
                        <button class="DeleteSpaceBtn btn" type="button" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            刪除
                        </button>
                        <a class="addspace EditSpaceBtn me-1" href="AddSpace">
                            編輯空間
                        </a>
                    </div>
                </div>
            </div>
            <!-- 按下刪除跳出的Ｍodal -->
            <!-- 桌機 平板 手機橫 -->
            <!-- Modal -->
            <div class="modal fade " id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content ">
                        <button type="button" class="btn-close CloseMbtn ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>
                        <h5 class="text-center mt-3 mb-4" id="exampleModalLabel">刪除場地</h5>
                        <div class="modalbody ms-auto me-auto">
                            <p class=" text-center  text-md-start">您是否確定將此場地刪除？</p>
                            <div class="form-check ms-auto me-auto w-75">
                                <input class="form-check-input " type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label " for="flexCheckDefault">是的，我清楚刪除此場地相關的所有列表訊息</label>

                            </div>
                        </div>
                        <div class="row justify-content-center mt-5 mb-2 ">
                            <button type="button" class="w-75 col-8 btn deleteBtnM " data-bs-dismiss="modal">刪除</button>
                        </div>
                        <div class="row justify-content-center mb-4">
                            <button type="button" class="w-75 col-8 text-center btn cancelBtnM " data-bs-dismiss="modal" aria-label="Close">取消</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
