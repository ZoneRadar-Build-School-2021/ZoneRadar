
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layoutnoheaderfooter.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="zone-logo d-flex mb-3 justify-content-center">
                <img src="~/Assets/IMG/ZONERadar.png" alt="logo" class="logo">
            </div>
            <div class="reset-title mb-3 d-flex justify-content-center">
                <h2>請輸入您的電子郵件</h2>
            </div>
            <div class="mail-input mb-3 d-sm-flex d-inline-block justify-content-center">
                <span class="input-group-text" id="inputGroupPrepend">輸入電子郵件</span>
                <input type="mail" class="form-control" id="validationCustomUsername" placeholder="您的電子郵件" aria-describedby="inputGroupPrepend">
            </div>
            <div class="reset-password mb-3 d-flex justify-content-center">
                <button type="button" class="btn">重設密碼</button>
            </div>
        </div>
    </div>
</div>

@section topCSS{
    <link href="~/Assets/CSS/forgetpassword/forget-password.css" rel="stylesheet" />
}

