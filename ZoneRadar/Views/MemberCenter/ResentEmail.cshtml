
@{
    ViewBag.Title = "ResentEmail";
}

<div class="text-center px-5 my-5">
    <h4 class="mb-3">重發驗證信</h4>
    <h5 class="mb-3">尚未收到驗證信嗎? 請輸入您註冊時使用的Email帳號重新寄發。</h5>
    <div class="input-area m-auto">
        <input type="email" id="input-user-email" class="form-control form-control-lg d-block" placeholder="Email" required>
        <button class="mt-3 px-4 py-2 text-white">確認送出</button>
    </div>
</div>

@section topCSS
{
    <style>
        .input-area {
            max-width: 500px;
        }

        input#input-user-email {
            font-size: 18px;
            color: #343840;
        }

        input#input-user-email::placeholder {
            font-size: 18px;
            color: #ccc;
        }

        input#input-user-email:focus {
            box-shadow: 0 0 5px #049DD9;
            border-color: #049DD9;
        }

        button {
            border-radius: .3rem;
            background-color: #049DD9;
            border: none;
        }

        button:hover {
            background-color: #0077a7;
        }
    </style>
}

@section endJS
{
    <script>
        function postValue() {
            let email = $("#input-user-email").val();

            console.log(email);
            $.ajax({
                type: "POST",
                url: "/MemberCenter/ResentEmail",
                data: { email: email },
                dataType: "text",
                success: function (response) {
                    let result = JSON.parse(response);
                    Swal.fire({
                        title: result.Message,
                        icon: result.Icon,
                        showConfirmButton: true,
                        confirmButtonColor: "#be7418",
                        confirmButtonText: "OK",
                        position: "top"
                    })
                }
            });
        }

        window.onload = function () {
            let btn = $("button");
            btn.click(function () {
                postValue();
            });
        }
    </script>      
}