@model HostInfoViewModel
@{
    ViewBag.Title = Model.User.Name + " - SellerCard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var user = Model.User;
    var spaces = Model.Spaces;
    /*https://localhost:44322/MemberCenter/hostinfo?memberId=1*/
