
@{
    ViewBag.Title = "VerifyMail";
    Layout = "~/Views/Shared/_Layoutnoheaderfooter.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="zone-logo d-flex mb-3 justify-content-center">
                <img src="~/Assets/IMG/ZONERadar.png" alt="logo" class="logo">
            </div>
            <div class="verify-title mb-3 d-flex justify-content-center">
                <h2>驗證您的電子郵件</h2>
            </div>
            <div class="verify-word mb-3 d-flex justify-content-center">
                <h6>請確認您的電子郵件是否收到4位數驗證碼並輸入</h6>
            </div>
            <div class="mail-input mb-3 d-sm-flex d-inline-block justify-content-center">
                <span class="input-group-text" id="inputGroupPrepend">輸入驗證碼</span>
                <input type="mail" class="form-control" id="validationCustomUsername" placeholder="XXXX" aria-describedby="inputGroupPrepend">
            </div>
            <div class="verify mb-3 d-flex justify-content-center">
                <button type="button" class="verify btn">驗證</button>
            </div>
            <div class="nocode mb-3 d-flex justify-content-center">
                <h6>沒收到驗證碼嗎?</h6>
            </div>
            <div class="resend-code mb-3 d-flex justify-content-center">
                <a>重傳驗證碼</a>
            </div>
        </div>
    </div>
</div>

@section topCSS{
    <link href="~/Assets/CSS/verifymail/verify-email.css" rel="stylesheet" />
}

