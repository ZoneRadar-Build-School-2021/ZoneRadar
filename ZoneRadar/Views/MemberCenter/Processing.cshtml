
@{
    ViewBag.Title = "Processing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="membercenter_processing container mt-5 border-bottom">
    <div class="memberbuyer row">
        <h3 class="memberbuyer_title me-4">訂單狀態</h3>
        <ul class="memberbuyer_state d-flex justify-content-start mt-5">
            <a class="me-4" href="Pending">
            <li class="p-2">待處理</li>
            </a>
            <a class="me-4" href="Processing">
            <li class="p-2">處理中</li>
            </a>
            <a class="me-4" href="Completed">
            <li class="p-2">已完成</li>
            </a>
        </ul>
    </div>
</div>
<div class="memberbuyer_container container mt-1">
    <div class="memberbuyer_processing row mt-5 mb-3">
