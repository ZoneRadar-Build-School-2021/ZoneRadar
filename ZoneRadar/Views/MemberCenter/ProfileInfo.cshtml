
@{
    ViewBag.Title = "PersonalInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="profile-title">
                <h1>會員資訊</h1>
            </div>

            <div class="profile-photo">
                <h3>大頭照片</h3>
            </div>
            <hr>
            <div class="photo-button mb-3">
                <div class="photo mb-2">
                    <img src="~/Assets/IMG/head.png" alt="">
                </div>
                <div class="head-button">
                    <button type="button" class="btn btn-outline-info">選擇大頭照片</button>
                </div>
            </div>
            <div class="basic-info-title">
                <h3>個人資訊</h3>
            </div>
            <hr>
            <div class="name row align-items-center mb-3 d-flex justify-content-center">
                <div class="col-4">
                    <label for="InputName" class="col-form-label d-flex justify-content-center">姓名</label>
                </div>
                <div class="col-8">
                    <input type="name" id="InputName" class="form-control" aria-describedby="">
                </div>
            </div>
            <div class="tel row align-items-center mb-3 d-flex justify-content-center">
                <div class="col-4">
                    <label for="InputTel" class="col-form-label d-flex justify-content-center">電話</label>
                </div>
                <div class="col-8">
                    <input type="tel" id="InputTel" class="form-control" aria-describedby="telverify">
                </div>
                <div class="verify d-none">
                    <span id="telverify" class="text-danger ">
                        <i class="fas fa-exclamation-circle"></i>
                        驗證電話
                    </span>
                </div>
            </div>
            <div class="mail row align-items-center mb-3 d-flex justify-content-center">
                <div class="col-4">
                    <label for="InputEmail" class="col-form-label d-flex justify-content-center">電子郵件</label>
                </div>
                <div class="col-8">
                    <input type="email" id="InputEmail" class="form-control" aria-describedby="emailverify">
                </div>
                <div class="verify d-none">
                    <span id="emailverify" class="text-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        驗證電子郵件
                    </span>
                </div>
            </div>
            <div class="description row align-items-center mb-3 d-flex justify-content-center">
                <div class="col-4">
                    <label for="descript" class="col-form-label d-flex justify-content-center">描述</label>
                </div>
                <div class="col-8">
                    <textarea class="form-control" id="exampleFormControlTextarea" rows="3"></textarea>
                </div>
            </div>
            <div class="description align-items-center mb-5 mt-5 d-flex justify-content-center">
                <button type="button" class="btn btn-outline-danger">儲存</button>
            </div>
            <div class="email-preferences">
                <h3>電子郵件選項</h3>
            </div>
            <hr>
            <div class="email-information mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Check">
                <label class="form-check-label" for="Check">透過電子郵件像我發送獨家優惠、靈感、新聞和社群消息</label>
            </div>
        </div>
    </div>
</div>
@section topCSS{
    <link href="~/Assets/CSS/profile.css" rel="stylesheet" />
}