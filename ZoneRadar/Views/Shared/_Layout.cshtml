                    </div>
                    <div class="col-12">
                        <p class="mb-0 py-3 fw-bolder" data-bs-toggle="collapse" data-bs-target="#social">社群媒體</p>
                        <ul class="collapse list-unstyled m-0 py-3" id="social">
                            <li class="mb-2 mb-lg-2"><a href="#">Facebook</a></li>
                            <li class="mb-2 mb-lg-2"><a href="#">Instagram</a></li>
                            <li class="mb-2 mb-lg-2"><a href="#">Twitter</a></li>
                        </ul>
                    </div>
                    <div class="col-12">
                        <p class="mb-0 py-3 fw-bolder" data-bs-toggle="collapse" data-bs-target="#explore">探索</p>
                        <ul class="collapse list-unstyled m-0 py-3" id="explore">
                            <li class="mb-2 mb-lg-2"><a href="~/Searching/SearchingPage">找場地</a></li>
                            <li class="mb-2 mb-lg-2"><a href="#" data-bs-toggle="modal" data-bs-target="#register-modal">刊場地</a></li>
                        </ul>
                    </div>
                </div>
                <span class="col-12 d-md-none text-md-start px-4 mt-5">&copy; ZONERadar - <a href="~/HOME/Policy" class="text-decoration-underline">服務條款</a></span>
            </div>
        </div>
    </footer>

    <script src="~/Assets/JS/leaflet.js"></script>
    <script src="~/Assets/JS/flatpickr.js"></script>
    <script src="~/Assets/JS/leaflet.markercluster.js"></script>
    <script src="~/Assets/JS/swiper-bundle.min.js"></script>
    <script src="~/Assets/JS/zh-tw.js"></script>
    <script src="~/Assets/JS/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/JS/sweetalert2.js"></script>
    <script src="~/Assets/JS/layout/navbar-footer.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

    
    @if (User.Identity.IsAuthenticated)
    {
        <script>
            let customer_only = document.querySelectorAll(".customer-only");
            let member_only = document.querySelectorAll(".member-only");
            customer_only.forEach(item => {
                item.classList.add("d-none");
            })
            member_only.forEach(item => {
                item.classList.remove("d-none");
            })
        </script>
    }
    else
    {
        <script>
            let customer_only = document.querySelectorAll(".customer-only");
            let member_only = document.querySelectorAll(".member-only");
            customer_only.forEach(item => {
                item.classList.remove("d-none");
            })
            member_only.forEach(item => {
                item.classList.add("d-none");
            })
        </script>
    }
    @RenderSection("endCSS", required: false)
    @RenderSection("endJS", required: false)

</body>
</html>
